{
  "name": "aem-sdk-setup",
  "version": "1.0.0",
  "description": "CLI utility to set up local AEM SDK environments using oclif.",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run format:check",
    "test": "jest",
    "lint": "eslint src test --max-warnings 0",
    "format": "prettier -w --ignore-path .prettierignore \"**/*.{js,json,md}\"",
    "format:check": "prettier --check --ignore-path .prettierignore \"**/*.{js,json,md}\"",
    "prepare": "node bin/run --help",
    "prepack": "npm run format",
    "release": "semantic-release"
  },
  "keywords": [
    "aem",
    "cli",
    "sdk"
  ],
  "author": "AEM X",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AEM-X/aem-sdk-setup.git"
  },
  "bugs": {
    "url": "https://github.com/AEM-X/aem-sdk-setup/issues"
  },
  "homepage": "https://github.com/AEM-X/aem-sdk-setup#readme",
  "files": [
    "bin",
    "src",
    "oclif.config.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "eslintIgnore": [
    "coverage"
  ],
  "dependencies": {
    "@oclif/core": "^4.3.3",
    "@oclif/plugin-autocomplete": "^3",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "unzipper": "^0.12.3",
    "extract-zip": "^2.0.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.14",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-node": "^10.9.2"
  },
  "bin": {
    "aem-sdk-setup": "./bin/run.js"
  },
  "oclif": {
    "bin": "aem-sdk-setup",
    "commands": {
      "strategy": "single",
      "target": "./src/commands/setup.js"
    },
    "dirname": "aem-sdk-setup",
    "topicSeparator": " ",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "cross-spawn": "^7.0.6",
    "path-to-regexp": "^1.9.0",
    "micromatch": "^4.0.8",
    "braces": "^3.0.3",
    "brace-expansion": "^2.0.1",
    "@babel/helpers": "^7.26.10"
  }
}
